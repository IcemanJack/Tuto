@using Tuto.DataLayer.Enums
@model Tuto.Web.ViewModels.HelpRequest.HelpRequestListDetailsViewModel

@{
    this.ViewBag.Title = "Details";
    this.ViewBag.Page_Id = "HelpRequest_ListDetails";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header">
	<h1><span class="awe-info-sign"></span>@Resources.Resources.ViewHelpRequestDetailsHeader</h1>
</div>
<!-- /Page header -->
<div class="page-container">
    <fieldset>

        <article class="span6">
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="2">@Resources.Resources.ViewHelpRequestDetailsHeader</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>@(this.Html.DisplayNameFor(model => model.createdTime))</th>
                        <td>@(this.Html.DisplayFor(model => model.createdTime))</td>
                    </tr>
                        
                    <tr>
                        <th>@(this.Html.DisplayNameFor(model => model.course.courseName))</th>
                        <td>@(this.Html.DisplayFor(model => model.course.courseName))</td>
                    </tr>
                        
                    <tr>
                        <th>@(this.Html.DisplayNameFor(model => model.misunderstoodNotions))</th>
                        <td>@(this.Html.DisplayFor(model => model.misunderstoodNotions))</td>
                    </tr>
            
                    <tr>
                        <th>@(this.Html.DisplayNameFor(model => model.comment))</th>
                        <td>@(this.Html.DisplayFor(model => model.comment))</td>
                    </tr>
                        
                    <tr>
                        <th>@(this.Html.DisplayNameFor(model => model.currentState))</th>
                        <td><span class="label label-important">@(this.Model.currentState.getString())</span></td>
                    </tr>
                </tbody>
            </table>
            
            <button class="btn btn-wuxia" onclick=" location.href = '@(this.Url.Action("list", "HelpRequest"))' ">@Resources.Resources.ViewHelpRequestDetailsReturnButton</button>
        </article>
    </fieldset>
</div>