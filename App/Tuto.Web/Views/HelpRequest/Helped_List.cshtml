@using Tuto.DataLayer.Enums
@model Tuto.Web.ViewModels.HelpedHelpRequestListViewModel

@{
    ViewBag.Title = "Vos demades de tutorat";
}

<!-- Page header -->
<div class="page-header">
    <h1><span class="awe-tasks"></span>@Resources.Resources.ViewHelpRequestHelpedListHeader</h1>
    <ul class="page-header-actions">
        <li class="active demoTabs">
            @Html.ActionLink(@Resources.Resources.ViewHelpRequestCreateButton, "Create", new { controller = "HelpRequest" }, new { @class = "btn btn-wuxia" })
        </li>
    </ul>
</div>
<!-- /Page header -->
<div class="page-container">
    <div class="row-fluid">
        <div class="control-group" align="right">
            <label class="control-label" for="select">@Resources.Resources.ViewFilter</label>
            <div class="controls">
                <select id="select" style="width:120px">
                    <option></option>
                    <option>À confirmer</option>
                    <option>Confirmé</option>
                    <option>Bilan à faire</option>
                    <option>Terminé</option>
                </select>
                <button class="btn" type="button">Go!</button>
            </div>
        </div>

        <fieldset>
            <legend>@Resources.Resources.ViewHelpRequestHelpedListLegend1</legend>				
            <table class="table">
                <thead>
                    <tr>
                        <th>@Resources.Resources.DisplayHelpRequestState</th>
                        <th>@Resources.Resources.DisplayHelpRequestCourseName</th>
                        <th>@Resources.Resources.DisplayHelpRequestCreatedTime</th>
                        <th>@Resources.Resources.DisplayHelpRequestTutorName</th>
                        <th>@Resources.Resources.DisplayHelpRequestSessionDate</th>
                        <th>@Resources.Resources.DisplayHelpRequestSessionPlace</th>
                        <th>@Resources.Resources.ListEntryActions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.assignedHelpRequests)
                    {
                        <tr @(item.helpedHasConfirmed ? @Html.Raw("class= \"green\"") : @Html.Raw("class= \"red\""))>
                            <td>@item.currentState.getString()</td>
                            <td>@Html.Raw(item.courseName)</td>
                            <td>@Html.Raw(item.createdTime.ToString())</td>
                            <td>@Html.Raw(item.tutorFirstName) @Html.Raw(item.tutorLastName)</td>
                            <td>@Html.Raw(item.individualSessionDate)</td>
                            <td>@Html.Raw(item.individualSessionPlace)</td>
                            <td class="toolbar" style="text-align: center;">
                                <div class="btn-group">
                                    @if (!item.helpedHasConfirmed)
                                    {
                                        <button class="btn btn-primary" onclick="location.href='@Url.Action("confirm", "HelpRequest", new { id=item.id })'">Confirmer</button>
                                        <button class="btn" onclick="location.href='@Url.Action("refuse", "HelpRequest", new { id=item.id })'">Refuser</button>
                                    }
                                    <button class="btn" onclick="location.href='@Url.Action("details", "HelpRequest", new { id=item.id })'">Détails</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </fieldset>
        
        <fieldset>
		    <legend>@Resources.Resources.ViewHelpRequestHelpedListLegend2</legend>				
            <table class="table">
                <thead>
                    <tr>
                        <th>@Resources.Resources.DisplayHelpRequestState</th>
                        <th>@Resources.Resources.DisplayHelpRequestCourseName</th>
                        <th>@Resources.Resources.DisplayHelpRequestCreatedTime</th>
                        <th>@Resources.Resources.ListEntryActions</th>
                        <th>@Resources.Resources.DisplayHelpRequestReport</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.allHelpRequests)
                    {
                        <tr>
                            <td>@item.currentState.getString()</td>
                            <td>@Html.Raw(item.courseName)</td>
                            <td>@Html.Raw(item.createdTime.ToString())</td>
                            <td class="toolbar" style="text-align: center;">
                                <div class="btn-group">
                                    <button class="btn" onclick="location.href='@Url.Action("details", "HelpRequest", new { id=item.id })'">Détails</button>
                                </div>
                            </td>
                            <td class="toolbar" style="text-align: center;">
                            @if (item.currentState == HelpRequestState.FINISHED)
                            {
                                @(item.reportIsEmpty ? Html.ActionLink(@Resources.Resources.HelpRequestRepportFillOut, "report", new {id = item.id}) : Html.Raw(@Resources.Resources.HelpRequestRepportFilledOut))
                            }
                            else
                            {
                                @Html.Raw(@Resources.Resources.HelpRequestRepportNotAvailable)
                            }
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
		</fieldset>
    </div>
</div>